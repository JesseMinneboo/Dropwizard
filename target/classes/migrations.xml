    <changeSet id="1" author="jesse">
        <!-- adding tables to the database -->
        <createTable tableName="user">
            <column name="user_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/></column>
            <column name="user_email" type="varchar(256)"/>
            <column name="user_name" type="varchar(256)"/>
            <column name="user_surname" type="varchar(256)"/>
            <column name="user_password" type="varchar(256)"/>
            <column name="user_role_id" type="bigint"/>
        </createTable>

        <createTable tableName="game">
            <column name="game_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/></column>
            <column name="game_name" type="varchar(64)"/>
            <column name="game_description" type="varchar(1024)"/>
            <column name="game_price" type="numeric(5,2)"/>
            <column name="game_image_path" type="varchar(512)"/>
            <column name="game_counter" type="bigint"/>
        </createTable>

        <createTable tableName="order">
            <column name="order_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_user_id" type="bigint"/> <!--FOREIGN KEY-->
            <column name="order_date" type="date"/>
            <column name="order_price" type="numeric(5,2)"/>
        </createTable>


