<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="jesse">

        <!-- adding tables to the database -->
        <createTable tableName="user">
            <column name="user_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="displayname" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
        </createTable>

        <createTable tableName="shopping_list">
            <column name="user_id" type="bigint"/>
            <column name="product_name" type="varchar(255)"/>
            <column name="price" type="numeric(5,2)"/>
        </createTable>

        <!-- adding foreign key constraints-->
        <addForeignKeyConstraint
        baseColumnNames="user_id"
        baseTableName="shopping_list"
        constraintName="shopping_list_from_user_id"
        referencedColumnNames="user_id"
        referencedTableName="user"/>

        <!-- seeding tables -->
        <insert tableName="user">
            <column name="displayname">minnebro</column>
            <column name="username">minnebro</column>
            <column name="password">7bdb867406014343d036c33421671556</column>
        </insert>


    </changeSet>

</databaseChangeLog>